[% USE date = date(format => '%Y-%m-%d', locale => 'en_GB') %]

[% PROCESS tm/header.tt2
    title=date.format( timespan.start_date ) _ ' - ' _ date.format( timespan.end_date ) _ ' timespan' %]

<div id="wholecolumn">

    <div id="widecolumn">
